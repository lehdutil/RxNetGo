<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/white"
                android:centerY="0.5"
                android:endColor="@color/white"
                android:startColor="@color/white" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/grey_88"
                    android:centerY="0.5"
                    android:endColor="@color/grey_88"
                    android:startColor="@color/grey_88" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorTealPrimary"
                    android:centerY="0.5"
                    android:endColor="@color/colorTealPrimary"
                    android:startColor="@color/colorTealPrimary" />
            </shape>
        </clip>
    </item>
</layer-list>